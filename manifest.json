{
    "name": "nim (Node Inspector Monitor)",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "Extension for automatically launching V8 Inspector for Node.js debugging",
    "author": "June07 <667@june07.com> (http://june07.com/)",
    "browser_action": {
        "default_icon": "logo32.png",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "icons": {
        "16": "logo16.png",
        "32": "logo32.png",
        "48": "logo48.png",
        "128": "logo128.png"
    },
    "permissions": ["http://*/", "storage", "background", "tabs"],
    "background": {
        "page": "background.html"
    }
}
